<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.auth.activity.RegisterActivity">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppBarOverlay">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                auto:popupTheme="@style/PopupOverlay" />

        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            auto:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_20sdp">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/drawee"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_gravity="center"
                        auto:placeholderImage="@mipmap/ic_launcher"
                        auto:placeholderImageScaleType="fitXY"
                        auto:roundAsCircle="true" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="center"
                        auto:srcCompat="@android:drawable/ic_menu_camera" />

                </FrameLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:hint="Your name"
                    auto:boxCornerRadiusBottomEnd="@dimen/_10sdp"
                    auto:boxCornerRadiusBottomStart="@dimen/_10sdp"
                    auto:boxCornerRadiusTopEnd="@dimen/_10sdp"
                    auto:boxCornerRadiusTopStart="@dimen/_10sdp"
                    auto:startIconDrawable="@drawable/ic_account_circle_black_24dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:lines="1"
                        android:text="@string/name_roman_bjit" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:hint="Email Address"
                    auto:boxCornerRadiusBottomEnd="@dimen/_10sdp"
                    auto:boxCornerRadiusBottomStart="@dimen/_10sdp"
                    auto:boxCornerRadiusTopEnd="@dimen/_10sdp"
                    auto:boxCornerRadiusTopStart="@dimen/_10sdp"
                    auto:startIconDrawable="@drawable/ic_email_black_24dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:lines="1"
                        android:text="@string/email_roman_bjit" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:hint="Password"
                    auto:boxCornerRadiusBottomEnd="@dimen/_10sdp"
                    auto:boxCornerRadiusBottomStart="@dimen/_10sdp"
                    auto:boxCornerRadiusTopEnd="@dimen/_10sdp"
                    auto:boxCornerRadiusTopStart="@dimen/_10sdp"
                    auto:passwordToggleEnabled="true"
                    auto:startIconDrawable="@drawable/ic_lock_black_24dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:lines="1"
                        android:text="@string/password_roman_bjit" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:hint="Height"
                    auto:boxCornerRadiusBottomEnd="@dimen/_10sdp"
                    auto:boxCornerRadiusBottomStart="@dimen/_10sdp"
                    auto:boxCornerRadiusTopEnd="@dimen/_10sdp"
                    auto:boxCornerRadiusTopStart="@dimen/_10sdp"
                    auto:startIconDrawable="@drawable/ic_height">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@android:drawable/arrow_down_float"
                        android:focusable="false"
                        android:focusableInTouchMode="false" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:hint="Birthday"
                    auto:boxCornerRadiusBottomEnd="@dimen/_10sdp"
                    auto:boxCornerRadiusBottomStart="@dimen/_10sdp"
                    auto:boxCornerRadiusTopEnd="@dimen/_10sdp"
                    auto:boxCornerRadiusTopStart="@dimen/_10sdp"
                    auto:startIconDrawable="@drawable/ic_birthday">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@android:drawable/ic_menu_my_calendar"
                        android:focusable="false"
                        android:focusableInTouchMode="false" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:hint="Location"
                    auto:boxCornerRadiusBottomEnd="@dimen/_10sdp"
                    auto:boxCornerRadiusBottomStart="@dimen/_10sdp"
                    auto:boxCornerRadiusTopEnd="@dimen/_10sdp"
                    auto:boxCornerRadiusTopStart="@dimen/_10sdp"
                    auto:startIconDrawable="@drawable/ic_edit_location_black_24dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@android:drawable/arrow_down_float"
                        android:focusable="false"
                        android:focusableInTouchMode="false" />

                </com.google.android.material.textfield.TextInputLayout>


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        auto:cardBackgroundColor="@color/material_grey100"
                        auto:cardCornerRadius="@dimen/_10sdp"
                        auto:cardElevation="@dimen/_10sdp"
                        auto:cardPreventCornerOverlap="true">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"

                            android:minHeight="@dimen/_80sdp"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:scaleType="fitXY"
                                android:src="@drawable/ic_male" />

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:text="Male"
                                android:textColor="@color/material_grey600"
                                android:textSize="@dimen/_14ssp"
                                android:textStyle="bold" />

                        </androidx.appcompat.widget.LinearLayoutCompat>


                    </com.google.android.material.card.MaterialCardView>

                    <View
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="wrap_content" />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        auto:cardBackgroundColor="@color/material_grey100"
                        auto:cardCornerRadius="@dimen/_10sdp"
                        auto:cardElevation="@dimen/_10sdp"
                        auto:cardPreventCornerOverlap="true">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:minHeight="@dimen/_80sdp"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:scaleType="fitXY"
                                android:src="@drawable/ic_female" />

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:text="Female"
                                android:textColor="@color/material_grey600"
                                android:textSize="@dimen/_14ssp"
                                android:textStyle="bold" />

                        </androidx.appcompat.widget.LinearLayoutCompat>


                    </com.google.android.material.card.MaterialCardView>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        auto:cardBackgroundColor="@color/material_grey100"
                        auto:cardCornerRadius="@dimen/_10sdp"
                        auto:cardElevation="@dimen/_10sdp"
                        auto:cardPreventCornerOverlap="true">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:minHeight="@dimen/_80sdp"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:scaleType="fitXY"
                                android:src="@drawable/ic_male" />

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:text="Male"
                                android:textColor="@color/material_grey600"
                                android:textSize="@dimen/_14ssp"
                                android:textStyle="bold" />

                        </androidx.appcompat.widget.LinearLayoutCompat>


                    </com.google.android.material.card.MaterialCardView>

                    <View
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="wrap_content" />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        auto:cardBackgroundColor="@color/material_grey100"
                        auto:cardCornerRadius="@dimen/_10sdp"
                        auto:cardElevation="@dimen/_10sdp"
                        auto:cardPreventCornerOverlap="true">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:minHeight="@dimen/_80sdp"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:scaleType="fitXY"
                                android:src="@drawable/ic_female" />

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:text="Female"
                                android:textColor="@color/material_grey600"
                                android:textSize="@dimen/_14ssp"
                                android:textStyle="bold" />

                        </androidx.appcompat.widget.LinearLayoutCompat>


                    </com.google.android.material.card.MaterialCardView>

                    <View
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="wrap_content" />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        auto:cardBackgroundColor="@color/material_grey100"
                        auto:cardCornerRadius="@dimen/_10sdp"
                        auto:cardElevation="@dimen/_10sdp"
                        auto:cardPreventCornerOverlap="true">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:minHeight="@dimen/_80sdp"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:scaleType="fitXY"
                                android:src="@drawable/ic_wc_black_24dp" />

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:text="Both"
                                android:textColor="@color/material_grey600"
                                android:textSize="@dimen/_14ssp"
                                android:textStyle="bold" />

                        </androidx.appcompat.widget.LinearLayoutCompat>


                    </com.google.android.material.card.MaterialCardView>
                </androidx.appcompat.widget.LinearLayoutCompat>


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:minHeight="@dimen/_46sdp"
                    android:text="Create"
                    android:textAllCaps="false"
                    auto:cornerRadius="@dimen/_20sdp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </ScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>