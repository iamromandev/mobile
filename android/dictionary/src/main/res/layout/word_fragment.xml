<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.fragment.WordFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/material_grey300"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/layout_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_3sdp"
            auto:cardCornerRadius="@dimen/_2sdp"
            auto:cardElevation="@dimen/_2sdp"
            auto:cardPreventCornerOverlap="false">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/material_grey500"
                android:minHeight="@dimen/_50sdp">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/search"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    android:visibility="gone"
                    auto:actualImageScaleType="centerCrop"
                    auto:failureImage="@drawable/ic_baseline_search_24"
                    auto:failureImageScaleType="centerInside"
                    auto:layout_constraintBottom_toBottomOf="parent"
                    auto:layout_constraintEnd_toEndOf="parent"
                    auto:layout_constraintTop_toTopOf="parent"
                    auto:placeholderImage="@drawable/ic_baseline_search_24"
                    auto:placeholderImageScaleType="centerCrop"
                    auto:roundAsCircle="true" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/clear"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    android:visibility="gone"
                    auto:actualImageScaleType="centerCrop"
                    auto:failureImage="@drawable/ic_baseline_clear_24"
                    auto:failureImageScaleType="centerInside"
                    auto:layout_constraintBottom_toBottomOf="parent"
                    auto:layout_constraintEnd_toStartOf="@id/search"
                    auto:layout_constraintTop_toTopOf="parent"
                    auto:placeholderImage="@drawable/ic_baseline_clear_24"
                    auto:placeholderImageScaleType="centerCrop"
                    auto:roundAsCircle="true" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/query"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="@null"
                    android:fontFamily="@font/roboto_slab_regular"
                    android:hint="Enter word"
                    android:textColor="@color/white_50"
                    android:textSize="@dimen/_16ssp"
                    auto:layout_constraintBottom_toBottomOf="parent"
                    auto:layout_constraintEnd_toStartOf="@id/clear"
                    auto:layout_constraintStart_toStartOf="parent"
                    auto:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/material_grey100"
            auto:tabGravity="fill"
            auto:tabIndicator="@drawable/tab_indicator"
            auto:tabIndicatorColor="@color/textColorPrimary"
            auto:tabIndicatorHeight="@dimen/tabSize"
            auto:tabMode="scrollable"
            auto:tabSelectedTextColor="@color/textColorPrimary"
            auto:tabTextAppearance="@style/TabTextLight" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:saveEnabled="false" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</layout>