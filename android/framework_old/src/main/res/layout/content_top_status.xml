<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="${relativePackage}.${activityClass}">

    <RelativeLayout
        android:id="@+id/layout_top_status"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <net.cachapa.expandablelayout.ExpandableLayout
            android:id="@+id/layout_expandable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/material_grey300"
            auto:el_duration="500"
            auto:el_expanded="false"
            auto:el_parallax="0.5">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/message_offline"
                    android:textColor="@color/material_grey600"
                    android:textSize="18sp"
                    auto:fontFamily="@font/roboto_slab_regular" />

            </RelativeLayout>

        </net.cachapa.expandablelayout.ExpandableLayout>
    </RelativeLayout>
</layout>